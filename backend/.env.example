APP_NAME=BOSAPI
APP_ENV=local
APP_KEY=base64:IbrOgNACx61hL2tipFvYZNEn0T3qQMxQCBtztoWkbp8=
APP_DEBUG=true
APP_URL=http://localhost:8000

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration
# For development, you can use SQLite
DB_CONNECTION=sqlite
# DB_DATABASE=c:\Users\Devnodes\Git\repos\bos\backend\database\database.sqlite

# For MySQL (uncomment and configure when ready for production)
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=bos_api
# DB_USERNAME=root
# DB_PASSWORD=

# API Specific Settings
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=null
SANCTUM_STATEFUL_DOMAINS=localhost:8000

# Optimized API Caching
CACHE_STORE=database
CACHE_PREFIX=bos_api_cache
CACHE_TTL=3600

MEMCACHED_HOST=127.0.0.1

# You might want Redis for better performance in production
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Queue (important for background jobs in API)
QUEUE_CONNECTION=database

# Rate Limiting Settings (for API protection)
# Laravel has built-in rate limiting - configure here
RATE_LIMITER_ENABLED=true
API_RATE_LIMIT=60
API_RATE_LIMIT_EXPIRATION=1
# API_THROTTLE_BY=ip,api_token

# CORS Configuration - Laravel 12 has built-in CORS support
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_SUPPORTS_CREDENTIALS=true
CORS_MAX_AGE=86400

# Mail Configuration
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"
