# Frontend Configuration Example
# Copy this file to .env and update the values according to your environment
# When changing domains, only update the values in .env file

# Application Settings
NUXT_APP_NAME="Thanzil"
NUXT_APP_DESCRIPTION="Thanzil - Your Business Management Solution"
NUXT_APP_VERSION="1.0.0"

# Domain Configuration - UPDATE THESE WHEN CHANGING DOMAINS
# Frontend URL (where your Nuxt app runs)
NUXT_FRONTEND_URL="http://localhost:3000"
# Backend URL (where your Laravel API runs)
NUXT_BACKEND_URL="http://127.0.0.1:8000"

# API Configuration
# Full API base URL (usually NUXT_BACKEND_URL + /api)
NUXT_PUBLIC_API_BASE="http://127.0.0.1:8000/api"
# API version prefix
NUXT_PUBLIC_API_VERSION="v1"
# Request timeout in milliseconds
NUXT_PUBLIC_API_TIMEOUT=30000

# Authentication Configuration
# Enable/disable authentication system
NUXT_PUBLIC_ENABLE_AUTH=true
# Session timeout in seconds
NUXT_PUBLIC_SESSION_TIMEOUT=3600
# Token refresh interval in milliseconds
NUXT_PUBLIC_TOKEN_REFRESH_INTERVAL=300000

# Feature Flags
# Enable development tools
NUXT_PUBLIC_ENABLE_DEVTOOLS=true
# Enable debug mode
NUXT_PUBLIC_ENABLE_DEBUG=false

# UI Configuration
# Default theme
NUXT_PUBLIC_THEME="default"
# Default items per page for lists
NUXT_PUBLIC_ITEMS_PER_PAGE=20
# Maximum file upload size in bytes (10MB default)
NUXT_PUBLIC_MAX_UPLOAD_SIZE=10485760

# Currency Configuration
# Currency code (ISO 4217 format)
NUXT_PUBLIC_CURRENCY_CODE="INR"
# Currency symbol to display
NUXT_PUBLIC_CURRENCY_SYMBOL="â‚¹"
# Locale for currency formatting
NUXT_PUBLIC_CURRENCY_LOCALE="en-IN"

# Development/Production Environment
NODE_ENV=development

# CORS and Security Settings (if needed)
# NUXT_PUBLIC_ALLOWED_ORIGINS="http://localhost:3000,https://yourdomain.com"

# CDN Configuration (if using CDN)
# NUXT_PUBLIC_CDN_URL=""

# Google Analytics (if needed)
# NUXT_PUBLIC_GA_ID=""

# Error Tracking (if using services like Sentry)
# NUXT_PUBLIC_SENTRY_DSN=""
